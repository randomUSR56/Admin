<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Admin"
             xmlns:converters="clr-namespace:Admin.Converters"
             x:Class="Admin.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
            <converters:BusyTextConverter x:Key="BusyTextConverter" />
            <converters:StatusColorConverter x:Key="StatusColorConverter" />
            <converters:StatusTextConverter x:Key="StatusTextConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:CategoryColorConverter x:Key="CategoryColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
