<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Admin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Admin.Views"
    Title="OnlyFix Admin"
    FlyoutBehavior="Disabled"
    FlyoutBackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1E1E1E}">

    <!-- Login (no flyout) -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Shell.NavBarIsVisible="False"
        Shell.FlyoutItemIsVisible="False"
        FlyoutItemIsVisible="False" />

    <!-- Main sections â€” flyout sidebar -->
    <FlyoutItem Title="Dashboard" Route="Dashboard">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="&#x1F3E0;" FontFamily="Arial" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent
            Route="DashboardPage"
            ContentTemplate="{DataTemplate views:DashboardPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Users" Route="Users">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="&#x1F465;" FontFamily="Arial" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent
            Route="UsersPage"
            ContentTemplate="{DataTemplate views:UsersPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Cars" Route="Cars">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="&#x1F697;" FontFamily="Arial" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent
            Route="CarsPage"
            ContentTemplate="{DataTemplate views:CarsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Problems" Route="Problems">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="&#x26A0;" FontFamily="Arial" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent
            Route="ProblemsPage"
            ContentTemplate="{DataTemplate views:ProblemsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Tickets" Route="Tickets">
        <FlyoutItem.Icon>
            <FontImageSource Glyph="&#x1F3AB;" FontFamily="Arial" Size="20" />
        </FlyoutItem.Icon>
        <ShellContent
            Route="TicketsPage"
            ContentTemplate="{DataTemplate views:TicketsPage}" />
    </FlyoutItem>

</Shell>
